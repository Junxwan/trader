<UserControl x:Class="trader.OPS.List"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:trader.OPS"
             mc:Ignorable="d" x:Name="opListView">
    
    <ListView ItemsSource="{Binding Path=OPDSource, ElementName=opListView}">
        <ListView.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel/>
            </ItemsPanelTemplate>
        </ListView.ItemsPanel>

        <ListView.ItemTemplate>
            <DataTemplate>
                <ListViewItem Width="170" Height="auto" Margin="{Binding Path=OMargin, ElementName=opListView}">
                    <local:Table DateText="{Binding Path=DateText}" 
                                   PriceText="{Binding Path=PriceText}" 
                                   OPSource="{Binding Path=Value}"
                                   OPColor="{Binding Path=OPListColor, ElementName=opListView}"/>
                </ListViewItem>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>
