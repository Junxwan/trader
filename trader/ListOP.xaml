<UserControl x:Class="trader.ListOP"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:trader"
             mc:Ignorable="d" x:Name="opListView">

    <ListView ItemsSource="{Binding Path=OPDSource, ElementName=opListView}">
        <ListView.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel/>
            </ItemsPanelTemplate>
        </ListView.ItemsPanel>

        <ListView.ItemTemplate>
            <DataTemplate>
                <ListViewItem Width="150" Height="auto" Margin="-20 0 0 0">
                    <local:OPTable DateText="{Binding Path=DateText}" 
                                   PriceText="{Binding Path=PriceText}" 
                                   OPSource="{Binding Path=Value}"/>
                </ListViewItem>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>
